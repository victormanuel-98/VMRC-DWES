/*

Películas MFlix-  año >= 2000

- Idioma: Español && Ingles / Español || Ingles

*/

use sample_mflix

languages: { $in: ["Spanish", "English"] }

languages: { $all: ["Spanish", "English"] }



/*

Películas MFlix-  año >= 2000

- Que el parámetro "viewers" exista

*/

use sample_mflix

db.movies.find({
  year: { $gte: 2000 },
  viewers: { $exists: true }
}).limit(10)



/*

Películas MFlix-  año >= 2000

- Que tenga al menos 3 directores

*/

use sample_mflix

db.movies.find({
  year: { $gte: 2000 },
  "directors.2": { $exists: true }
}).limit(10)

