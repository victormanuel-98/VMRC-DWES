      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/files/test-file.txt",
          "host": ["{{baseUrl}}"],
          "path": ["api", "files", "test-file.txt"]
        }
      },
      "response": []
    }
