          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"notes/example.note\",\n  \"content\": \"{\\n  \\\"id\\\": \\\"ejemplo-01\\\",\\n  \\\"titulo\\\": \\\"Archivo modificado desde Postman\\\",\\n  \\\"contenido\\\": \\\"Este contenido ha sido actualizado mediante la API\\\",\\n  \\\"categoria\\\": \\\"test\\\",\\n  \\\"createdAt\\\": \\\"2025-12-16T10:00:00Z\\\"\\n}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/files/update",
          "host": ["{{baseUrl}}"],
          "path": ["api", "files", "update"]
        }
      },
      "response": []
    },
    {
      "name": "GET Files - Download file",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/files/download?name=notes/example.note",
          "host": ["{{baseUrl}}"],
          "path": ["api", "files", "download"],
          "query": [
            {
              "key": "name",
              "value": "notes/example.note"
            }
          ]
        }
      },
      "response": []
